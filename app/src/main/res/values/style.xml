<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для выбранной даты -->
    <style name="SelectedDateTextAppearance">
        <item name="android:textColor">#FFFFFF</item> <!-- Белый цвет текста -->
        <item name="android:background">#FF5733</item> <!-- Оранжевый цвет фона -->
    </style>

    <!-- Стиль для невыбранной даты -->
    <style name="NormalDateTextAppearance">
        <item name="android:textColor">#000000</item> <!-- Черный цвет текста -->
        <item name="android:background">#FFFFFF</item> <!-- Белый цвет фона -->
    </style>
    </resources>
